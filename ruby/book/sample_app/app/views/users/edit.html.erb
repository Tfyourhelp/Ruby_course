<% provide(:title, "Edit user") %>
<% provide(:button_text, "Save changes") %>

<h1> Update your profile </h1>

<div class="row">
  <div class="col-md6 col-md-offset-3">
    <%= render 'form' %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="https://gravatar.com/emails" target = "_blank" rel="noopener">change</a>
<%# target="_blank" in the Gravatar link is to get the browser to open the page in a new window or tab %>
    </div>
  </div>
</div>
  